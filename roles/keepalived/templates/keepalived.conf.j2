{% set third_octet = ansible_default_ipv4.address.split('.')[2] | int %}
{% set virtual_third_octet = 100 if third_octet == 42 else 101 %}
{% set virtual_ip = '192.168.' + virtual_third_octet | string + '.' + ansible_default_ipv4.address.split('.')[3] %}

global_defs {
    enable_script_security
}

vrrp_script check_haproxy {                 
    script "/home/keepalived_script/check_script" 
    weight 20                              
    interval 1               
}

vrrp_instance VI_1 {
    state MASTER
    interface ens3
    virtual_router_id 51
    priority 255
    preempt
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ keepalived_pass }}
    }
    virtual_ipaddress {
       192.168.101.102/24
    }
    unicast_peer {
        {% for host in groups['all'] %}
            {% if host != inventory_hostname %}
                {{ hostvars[host].ansible_default_ipv4.address }}
            {% endif %}
        {% endfor %}
    }
    track_script {
        check_haproxy
    }
}
