key "transfer.key" {
	algorithm hmac-sha256;
	secret "{{ transfer_key }}";
};

options {
    directory "/var/cache/bind";

    forwarders {
        {% for forwarder in dns_forwarders %}
        {{ forwarder }};
        {% endfor %}
    };

    allow-query {
        {% for network in allowed_networks %}
        {{ network }};
        {% endfor %}
    };

};


statistics-channels {
    inet 127.0.0.1 port 8053; 
}; 

